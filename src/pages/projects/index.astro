---
import Layout from "@/layouts/Layout.astro";
import Link from "@/components/Link.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("projects");
---

<Layout>
  <h2>Projects</h2>
  <img class="float-right w-100 md:mt-[-60px]" src="/giraffe.png" />
  <p class="mb-4">
    Here are a few projects that I've worked on, including some from my music
    technology masters at the University of Oslo.
  </p>

  <ul>
    {
      posts.map((post) => (
        <li class="mt-3">
          <Link href={`/projects/${post.id}`}>{post.data.title}</Link>
          <p>{post.data.summary}</p>
        </li>
      ))
    }
  </ul>
</Layout>
